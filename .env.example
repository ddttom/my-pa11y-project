# Web Audit Suite - Environment Configuration
# Copy this file to .env and customize for your environment

# Application Environment (development, production, test)
NODE_ENV=development

# Logging Configuration
# Options: error, warn, info, debug
LOG_LEVEL=debug

# Output Configuration
OUTPUT_DIR=results

# Default Sitemap URL (can be overridden via CLI)
SITEMAP_URL=https://example.com/sitemap.xml

# Cache Configuration
CACHE_DIR=.cache

# Network Configuration
MAX_RETRIES=3
TIMEOUT=120000

# Feature Flags
# Feature Flags
# Uncomment to enable by default
# ENABLE_HISTORY=true
# GENERATE_DASHBOARD=true
# GENERATE_EXECUTIVE_SUMMARY=true

# Advanced Options
# LIMIT=10
# COUNT=50
# INCLUDE_ALL_LANGUAGES=true
# THRESHOLDS_FILE=./thresholds.json
# CACHE_ONLY=false
# NO_CACHE=false
# FORCE_DELETE_CACHE=false

# Custom Thresholds File
# Path to custom thresholds JSON file
# THRESHOLDS_FILE=./custom-thresholds.json
